<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scraped JSON Files</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <h1>Scraped JSON Files</h1>
    <table>
        <thead>
            <tr>
                <th>Filename</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% jsonFiles.forEach(file => { %>
                <tr>
                    <td><%= file %></td>
                    <td><%= file.split('_').slice(2, 3).join('_') %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <form action="/download-json" method="get">
        <button type="submit">Download All JSON Files</button>
    </form>
</body>
</html>